{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "configs/*": [
        "src/configs/*"
      ],
      "context/*": [
        "src/contexts/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "utilities/*": [
        "src/utilities/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "content/*": [
        "src/content/*"
      ]
    }
  },
  "include": [
    "commitlint.config.cjs",
    ".eslintrc.cjs",
    "cypress.config.ts",
    "vite.config.ts",
    "cypress",
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
